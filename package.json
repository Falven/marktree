{
  "name": "marktree",
  "displayName": "MarkTree",
  "description": "Copy markdown trees of directories, optionally including contents at the click of a button.",
  "author": {
    "name": "Fran Aguilera",
    "url": "https://github.com/Falven"
  },
  "publisher": "Falven",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.copyMdTree",
    "onCommand:extension.copyMdContents",
    "onCommand:extension.copyMdTreeAndContents"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "MarkTree",
      "properties": {
        "marktree.gitignore": {
          "type": "boolean",
          "default": true,
          "description": "If enabled, MarkTree will ignore files and directories listed in .gitignore."
        }
      }
    },
    "commands": [
      {
        "command": "extension.copyMdTree",
        "title": "Copy Markdown Tree"
      },
      {
        "command": "extension.copyMdContents",
        "title": "Copy Markdown Contents"
      },
      {
        "command": "extension.copyMdTreeAndContents",
        "title": "Copy Markdown Tree and Contents"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.copyMdTree",
          "group": "navigation"
        },
        {
          "command": "extension.copyMdContents",
          "group": "navigation"
        },
        {
          "command": "extension.copyMdTreeAndContents",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "~20.17.9",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.14.4+sha512.c8180b3fbe4e4bca02c94234717896b5529740a6cbadf19fa78254270403ea2f27d4e1d46a08a0f56c89b63dc8ebfd3ee53326da720273794e6200fcf0d184ab",
  "dependencies": {
    "ignore": "^6.0.2"
  }
}